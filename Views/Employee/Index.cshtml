@model List<WebApplication4.Models.Employee>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Employees</h2>
        <a class="btn btn-primary" href="@Url.Action("Create")">+ Add Employee</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Job Position</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.Name</td>
                            <td>@emp.Email</td>
                            <td>@emp.JobPosition</td>
                            <td class="text-center">
                                <a class="btn btn-sm btn-warning me-1" href="@Url.Action("Edit", new { id = emp.Id })">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = emp.Id })"
                                   onclick="return confirm('Are you sure you want to delete this employee?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">No employees found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
