@{
    ViewBag.Title = "Home Page";
}

<main>
    <head>
        <meta charset="UTF-8">
        <title>Employee Management</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            .welcome-box {
                margin-top: 100px;
                padding: 40px;
                background: linear-gradient(to right, #007bff, #6610f2);
                color: white;
                text-align: center;
                border-radius: 15px;
                box-shadow: 0 10px 20px rgba(0,0,0,0.2);
                font-size: 1.5rem;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="welcome-box">
                👋 Welcome to Employee Management System
            </div>
        </div>
        <div class="row justify-content-center mt-5 g-4">
            <div class="col-md-5">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-3">👥 Employees</h4>
                        <p class="card-text">View, add, edit, and delete employee records.</p>
                        <a href="@Url.Action("Index", "Employee")" class="btn btn-primary w-100">Go to Employee List</a>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <h4 class="card-title mb-3">📅 Working Days Calculator</h4>
                        <p class="card-text">Calculate working days between two dates easily.</p>
                        <a href="@Url.Action("Calculate", "Calendar")" class="btn btn-info text-white w-100">Calculate Working Days</a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</main>